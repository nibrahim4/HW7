<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_title_trips"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="16dp"
        android:text="@string/tv_title_trips"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_coverPhoto_trips"
        android:layout_width="131dp"
        android:layout_height="139dp"
        android:layout_below="@+id/tv_title_trips"
        android:layout_alignParentStart="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/select_image" />

    <TextView
        android:id="@+id/tv_description_trips"
        android:layout_width="240dp"
        android:layout_height="84dp"
        android:layout_below="@+id/tv_date_trips"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@+id/iv_coverPhoto_trips"
        android:text="@string/tv_description_trips"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_date_trips"
        android:layout_width="226dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@+id/tv_title_trips"
        android:text="@string/tv_dates"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_address_trips"
        android:layout_width="228dp"
        android:layout_height="45dp"
        android:layout_below="@+id/tv_description_trips"
        android:layout_marginStart="14dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/iv_coverPhoto_trips"
        android:text="@string/tv_address"
        android:textSize="24sp"
        android:textStyle="bold" />
</RelativeLayout>