<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_title_trips"
        android:layout_width="102dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="47dp"
        android:layout_marginTop="53dp"
        android:text="@string/tv_title_trips" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="104dp"
        android:layout_height="88dp"
        android:layout_below="@+id/tv_title_trips"
        android:layout_alignParentStart="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/select_image" />

    <TextView
        android:id="@+id/tv_description_trips"
        android:layout_width="240dp"
        android:layout_height="84dp"
        android:layout_below="@+id/tv_dates"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@+id/imageView"
        android:text="@string/tv_description_trips" />

    <TextView
        android:id="@+id/tv_dates"
        android:layout_width="226dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="58dp"
        android:layout_toEndOf="@+id/tv_title_trips"
        android:text="@string/tv_dates" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="345dp"
        android:layout_height="74dp"
        android:layout_below="@+id/tv_description_trips"
        android:layout_alignParentStart="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="15dp"
        android:text="@string/tv_address" />
</RelativeLayout>