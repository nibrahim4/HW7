<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_title_mytrip"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="33dp"
        android:text="@string/tv_title_trips"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_coverPhoto_mytrip"
        android:layout_width="135dp"
        android:layout_height="159dp"
        android:layout_below="@+id/tv_title_mytrip"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="6dp"
        app:srcCompat="@drawable/camera" />

    <TextView
        android:id="@+id/tv_description_mytrip"
        android:layout_width="238dp"
        android:layout_height="57dp"
        android:layout_below="@+id/tv_title_mytrip"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="19dp"
        android:layout_toEndOf="@+id/iv_coverPhoto_trips"
        android:text="@string/tv_description_trips"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_date_mytrip"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_description_mytrip"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="18dp"
        android:layout_toEndOf="@+id/iv_coverPhoto_mytrip"
        android:text="@string/tv_dates"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_address_mytrip"
        android:layout_width="240dp"
        android:layout_height="46dp"
        android:layout_below="@+id/tv_date_mytrip"
        android:layout_marginStart="11dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/iv_coverPhoto_mytrip"
        android:text="@string/tv_address"
        android:textSize="24sp"
        android:textStyle="bold" />
</RelativeLayout>